{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<section class="section">
		<div class="container">
			{{ form_start(registrationForm) }}
			<div class="field">
				<div class="control has-icons-left">
					{{ form_widget(registrationForm.username, {'attr': {'class': 'input', 'autocomplete': 'off', 'placeholder': 'Username'} } ) }}
					<span class="icon is-small is-left">
						<i class="fab fa-accessible-icon"></i>
					</span>
				</div>
			</div>
			<div class="field">
				<div class="control has-icons-left">
					{{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'input', 'placeholder': 'Password'}}) }}
					<span class="icon is-small is-left">
						<i class="fas fa-lock"></i>
					</span>
				</div>
			</div>
			<div class="field">
				<div class="control">
					<input type="submit" class="button is-link is-outlined" value="Register!">
				</div>
			</div>
			{% for error in errors %}
				<div class="notification is-danger">{{ error.message }}.</div>
			{% endfor %}
			{{ form_end(registrationForm) }}
		</div>
	</section>
{% endblock %}

{% block buttons %}
	{% include "loginButton.html.twig" %}
{% endblock %}
