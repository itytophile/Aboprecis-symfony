{% extends 'base.html.twig' %}

{% block title %}New sub
{% endblock %}

{% block body %}
<section class="section">
	<div class="content">

		{{ form_start(form, { 'attr': {
			'id': 'firstForm',
		} }) }}

		<div class="field">
			<div class="control">
				{{ form_widget(form.channel_name, { 'attr': {
					'id': 'inputChannel',
					'class': 'input',
					'placeholder': 'Channel\'s name',
					'autocomplete': 'off',
                } }) }}
				</div>
			</div>
			<div class="field">
				<div class="control">
					<button id="buttonChannel" type="button" class="button is-primary">Search</button>
				</div>
			</div>

			{{ form_end(form) }}

			<div id="columns" class="columns"></div>

			{{ form_start(formSub, { 'attr': {
				'id': 'finalForm',
				'hidden': 'on',
			} }) }}

			<div class="notification">
				You have chosen
				<a id="title" rel="noopener noreferrer" target="_blank"></a>.
			</div>
			{{ form_widget(formSub.channel, { 'attr': {
				'hidden': 'on',
			} }) }}
			{{ form_widget(formSub.title, { 'attr': {
				'hidden': 'on',
			} }) }}
			<div class="field">
				<div class="control">
					{{ form_widget(formSub.keywords, { 'attr': {
						'class': 'input',
						'placeholder': 'Keywords',
						'autocomplete': 'off',
					} }) }}
				</div>
			</div>
			<div class="field">
				<div class="control">
					<input type="submit" class="button is-primary" value="Save">
				</div>
			</div>

			{{ form_end(formSub) }}

		</div>
	</section>
{% endblock %}

{% block js %}
	{{ encore_entry_script_tags('new') }}
{% endblock %}
